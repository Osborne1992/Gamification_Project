<center>
  <h2>Editing <%= current_user.username %>'s Profile</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <table>
    <tr>
      <th colspan="2">Make changes to your public data</th>
    </tr>
    <tr>
      <td align="right"><%= f.label :email, "Email: " %></td>
      <td><%= f.email_field :email, autofocus: true %></td>
    </tr>
    <br>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <tr>
      <td align="right"><%= f.label :first_name, "First Name: " %></td>
      <td><%= f.text_field :first_name %></td>
    </tr>
    <br>
    <tr>
      <td align="right"><%= f.label :last_name, "Last Name: " %></td>
      <td><%= f.text_field :last_name %></td>
    </tr>
    <tr>
      <th colspan="2"><br /><br />Change your password (optional)</th>
    </tr>
    <tr>
      <td align="right"><%= f.label :password, "New Password: " %></td>
      <td><%= f.password_field :password, autocomplete: "off" %></td>
    </tr>
    <br>
    <tr>
      <td align="right"><%= f.label :password_confirmation, "Confirm New: " %></td>
      <td><%= f.password_field :password_confirmation, autocomplete: "off" %></td>
    </tr>
    <tr>
      <th colspan="2"><br /><br />Confirm changes(current password)</th>
    </tr>
    <tr>
      <td align="right"><%= f.label :current_password, "Current Password: " %></td>
      <td><%= f.password_field :current_password, autocomplete: "off" %></td>
    </tr>
  </table>
  <br>
  <div class="actions">
    <%= f.submit "Update" %> <%= link_to "Cancel", :back %>
  </div>
  <% end %>
  
  <br>
  <br>
  <br>
  <br>
  <table>
    <tr>
      <td>Unhappy with this site?</td>
      <td><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></td>
    </tr>
  </table>

</center>